@model Imagen

<h1> Colocar Imagen en el Foro </h1>

<div asp-validation-summary="All"></div>

<form method="post">
    <div class="form-group">
        <label asp-for="Nombre"></label> 
        <input asp-for="Nombre" class="form-control" />
    </div>
     <div class="form-group">
        <label asp-for="Foto"></label> 
        <input asp-for="Foto" class="form-control" />
    </div>
     <div class="form-group">
        <label asp-for="Comentario"></label> 
        <select asp-for="ComentarioId" asp-items="ViewBag.Comentarios"class="form-control"></select>
    </div>
    <button class="btn btn-primary">Registrar </button>
</form>