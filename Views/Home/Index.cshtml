@model List<Imagen>

@{
    ViewData["Title"] = "Home Page";
}

@if (Model.Count() == 0){
    <p class="text-center" > Aun no hay imagenes subidas </p>
} else {
    <div class="row">
        @foreach (var imagen in Model)
        {
            <div class="col-4 text-center">
                <h2> @imagen.Nombre </h2>
                <img src="@imagen.Foto" class="img-fluid"/>
             </div>
        }
    </div>
}